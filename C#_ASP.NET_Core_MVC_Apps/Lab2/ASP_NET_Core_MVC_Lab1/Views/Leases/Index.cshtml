<!--
 * This web app creates a website of a fictional boat marina company allowing users to learn about the company,
    see contact information, see available slips with the option of selecting them by dock, register a new user,
    a registered user can login/logout, lease available slips and see own leased slips
 * This file generates a page where an authenticated user can see a list of available leases
    with an option of leasing some of them one by one
 * Author: Marat Nikitin
 * SAIT, OOSD course, CPRG-214 .NET Web Applications course
 * When: February 2022
-->

@model IEnumerable<ASP_NET_Core_MVC_Lab1.Models.SlipDockLeaseViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center my-4 text-primary">Lease an Available Slip Here: <i class="fas fa-ship ml-2"></i></h1>

    <!-- A feedback message to a user confirming successful slip lease will be displayed here: -->
    @if (TempData["Message"] != null)
    {
        <h4 class="bg-success text-center text-light font-weight-bold p-2">
            @TempData["Message"]
        </h4>
    }
    <table id="leaseSlipsTable" class="table table-bordered table-striped table-hover 
           justify-content-center text-center">
        <thead style="position:sticky; top:0" class="bg-white text-primary">
            <tr class="py-0 my-0">
                <th>
                    @Html.DisplayNameFor(model => model.SlipID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DockName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WaterService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElectricalService)
                </th>
                <th> <h2><i class="far fa-hand-point-down text-primary font-weight-bold py-0 my-0"></i></h2></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlipID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DockName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WaterService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ElectricalService)
                    </td>
                    <td>
                        @Html.ActionLink("Lease", "Lease", new { id = item.SlipID })
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

