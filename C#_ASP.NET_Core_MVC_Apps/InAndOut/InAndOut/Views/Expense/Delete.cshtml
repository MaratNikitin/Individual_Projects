@model InAndOut.Models.Expense

<form method="post" asp-action="DeletePost"> <!-- DeletePost action will be run -->
    <input asp-for="ExpenseId" hidden /> <!-- ExpenseId value will be received -->
    <div class="border p-3">
        <!-- validating from the server side: -->
        <!-- <div asp-validation-summary="All" class="text-danger"></div> -->
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                        <!-- validating from the server side: -->
                    </div>
                    <div class="col-6">
                        <label asp-for="ExpenseAmount"></label>
                        <!-- validating from the server side: -->
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="ExpenseAmount" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- validating from the client's side: -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}