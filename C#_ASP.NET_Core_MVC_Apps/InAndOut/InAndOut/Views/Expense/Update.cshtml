@model InAndOut.Models.Expense

<form method="post" asp-action="Update">
    <input asp-for="ExpenseId" hidden /> <!-- ExpenseId value will be received with POST -->
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                        <!-- validating from the server side: -->
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="ExpenseAmount"></label>
                        <!-- validating from the server side: -->
                        <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="ExpenseAmount" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- validating from the client's side: -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}