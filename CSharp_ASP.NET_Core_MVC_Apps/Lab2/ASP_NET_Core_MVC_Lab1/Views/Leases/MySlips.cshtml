@model IEnumerable<DbEntities_Class_Library.LeaseSlipViewModel>

@{
    ViewData["Title"] = "MySlips";
}

<div class="container">
    <h1 class="text-center text-primary">My Slips: <i class="fas fa-ship ml-2"></i></h1>

    <table id="mySlipsTable" class="table table-bordered table-striped table-hover 
           justify-content-center text-center">
        <thead style="position:sticky; top:0" class="bg-white text-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LeaseID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SlipID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DockName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WaterService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElectricalService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaseID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlipID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DockName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WaterService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ElectricalService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>                   
                </tr>
            }
        </tbody>
    </table>
</div>

