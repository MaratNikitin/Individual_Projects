@model IEnumerable<ASP_NET_Core_MVC_Lab1.Models.SlipDockLeaseViewModel>

@{
    ViewData["Title"] = "Available Slips by Dock";
}

<h1 class="text-center text-primary">Available Slips Of The Selected Dock: <i class="fas fa-ship ml-2"></i></h1>
<div class="container">
    <table class="table table-striped table-bordered table-hover text-center justify-content-center">
        <thead style="position:sticky; top:0" class="bg-white text-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SlipID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DockName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WaterService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElectricalService)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlipID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DockName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WaterService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ElectricalService)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

